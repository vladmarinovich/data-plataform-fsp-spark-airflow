# ============================================
# CONFIGURACIÃ“N DE SEGURIDAD - AIRFLOW
# ============================================
# IMPORTANTE: Este archivo NO debe ser commiteado a Git
# Copiar como .env y llenar con valores reales

# --- SUPABASE (CRM Source) ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here

# --- GOOGLE CLOUD PLATFORM ---
# Ruta al archivo de credenciales de servicio (JSON)
GOOGLE_APPLICATION_CREDENTIALS=/opt/airflow/config/gcp-service-account.json
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=your-gcs-bucket-name

# --- AIRFLOW ---
AIRFLOW_UID=50000
AIRFLOW_GID=0

# Fernet key para encriptar secretos en Airflow
# Generar con: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here

# Clave secreta para Flask
# Generar con: python -c "import secrets; print(secrets.token_hex(32))"
AIRFLOW__WEBSERVER__SECRET_KEY=your-secret-key-here

# --- AIRFLOW DATABASE ---
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres/airflow

# --- AIRFLOW EXECUTOR ---
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# --- ENVIRONMENT ---
ENV=cloud
